# Environment Configuration
NODE_ENV=development
PORT=3000

# API Security
MCP_API_KEY=your-super-secure-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,https://smeboost.howaiconnects.com

# Rate Limiting
RATE_LIMIT_MAX=100

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cache Configuration
DEFAULT_CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Session Configuration
SESSION_TTL=86400
SESSION_SECRET=your-session-secret-key

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# Security Configuration
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/sme_boost
DATABASE_POOL_SIZE=10

# Email Configuration (for future use)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@howaiconnects.com

# Stripe Configuration (for future use)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# N8N Configuration (for future use)
N8N_HOST=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key

# Pinecone Configuration (for future use)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=sme-boost-embeddings

# Slack Configuration (for future use)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Google Workspace Configuration (for future use)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Zendesk Configuration (for future use)
ZENDESK_URL=https://your-domain.zendesk.com
ZENDESK_EMAIL=your-zendesk-email
ZENDESK_TOKEN=your-zendesk-token
