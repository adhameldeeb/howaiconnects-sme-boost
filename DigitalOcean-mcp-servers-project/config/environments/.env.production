# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=CHANGE_ME_PRODUCTION_DB_HOST
DB_PORT=5432
DB_USERNAME=CHANGE_ME_PRODUCTION_DB_USERNAME
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD
DB_NAME=CHANGE_ME_PRODUCTION_DB_NAME

# Redis Configuration
REDIS_HOST=CHANGE_ME_PRODUCTION_REDIS_HOST
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# Analytics Database
ANALYTICS_DB_HOST=CHANGE_ME_PRODUCTION_ANALYTICS_DB_HOST
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_USERNAME=CHANGE_ME_PRODUCTION_ANALYTICS_DB_USERNAME
ANALYTICS_DB_PASSWORD=CHANGE_ME_PRODUCTION_ANALYTICS_DB_PASSWORD
ANALYTICS_DB_NAME=CHANGE_ME_PRODUCTION_ANALYTICS_DB_NAME

# Authentication (CRITICAL: Change these in production!)
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MINIMUM_32_CHARACTERS
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET_MINIMUM_32_CHARACTERS

# Frontend URLs
FRONTEND_URL=https://app.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# Monitoring & Alerts
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# Encryption (CRITICAL: Change this in production!)
ENCRYPTION_KEY=CHANGE_ME_PRODUCTION_ENCRYPTION_KEY_EXACTLY_32_CHARACTERS

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads

# Production Settings
DEBUG=
ENABLE_CORS=false
TRUST_PROXY=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Health Check
HEALTH_CHECK_INTERVAL=15000
HEALTH_CHECK_TIMEOUT=5000

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce

# Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=15000

# Auto-scaling
MIN_REPLICAS=3
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://static.yourdomain.com

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
