# Staging Environment Variables
NODE_ENV=staging
PORT=3000

# Database Configuration
DB_HOST=your-staging-db-host.com
DB_PORT=5432
DB_USERNAME=mcp_staging
DB_PASSWORD=CHANGE_ME_STAGING_DB_PASSWORD
DB_NAME=mcp_servers_staging

# Redis Configuration
REDIS_HOST=your-staging-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STAGING_REDIS_PASSWORD

# Analytics Database
ANALYTICS_DB_HOST=your-staging-analytics-db-host.com
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_USERNAME=mcp_analytics_staging
ANALYTICS_DB_PASSWORD=CHANGE_ME_STAGING_ANALYTICS_PASSWORD
ANALYTICS_DB_NAME=mcp_analytics_staging

# Authentication
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_32_CHARS_MIN
SESSION_SECRET=CHANGE_ME_STAGING_SESSION_SECRET_32_CHARS

# Frontend URLs
FRONTEND_URL=https://staging-app.yourdomain.com
ADMIN_URL=https://staging-admin.yourdomain.com

# Monitoring & Alerts
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK

# Encryption
ENCRYPTION_KEY=CHANGE_ME_STAGING_ENCRYPTION_KEY_32_CHARS

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Production Settings
DEBUG=
ENABLE_CORS=true
TRUST_PROXY=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
